@model IEnumerable<CornNuggets.DataAccess.Models.OrderLog>

@{
    ViewData["Title"] = "Index";
}

    <h1 class="card-title">Order Log</h1>


<a asp-action="Create">Create New</a>
    <form asp-action="Search" method="post">
        <input type="text" name="orderId" placeholder="Order ID" />
        <input type="submit" value="Search" />
    </form>
    
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductQty)
            </td>
            <td>                
                @Html.DisplayFor(modelItem => item.Product.ProductPrice.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LogId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LogId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LogId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
